<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="label"
            type="java.lang.String" />

        <variable
            name="description"
            type="java.lang.String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/label"
            style="@style/FieldLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{label}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/addImageBtn"
            app:layout_constraintEnd_toStartOf="@id/descriptionLabel"
            tools:text="@string/lorem" />

        <ImageView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(label.length()>16||description!=null)?View.VISIBLE : View.GONE}"
            android:layout_marginEnd="@dimen/default_start_margin"
            app:srcCompat="@drawable/ic_info_outline"
            app:tint="?colorPrimary"
            app:layout_constraintStart_toEndOf="@id/label"
            app:layout_constraintTop_toTopOf="@id/label"
            app:layout_constraintBottom_toBottomOf="@id/label"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addImageBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginStart="@dimen/default_start_margin"
            android:layout_marginEnd="@dimen/default_start_margin"
            android:text="@string/add_image"
            android:textColor="?colorPrimary"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_form_image"
            app:iconTint="?colorPrimary"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            tools:layout_height="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/default_start_margin"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addImageBtn"
            tools:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@drawable/white_circle"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_clear"
            app:tint="@color/red_060"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintEnd_toEndOf="@id/image"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_start_margin"
            android:layout_marginEnd="@dimen/default_start_margin"
            android:padding="4dp"
            android:textSize="@dimen/textSize_12"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/image"
            tools:text="This is a error warning"
            tools:textAppearance="@style/error_appearance"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>