<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryAlpha"
                android:text="Analytics information"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/matomoUrl"
                android:layout_width="match_parent"
                android:inputType="textUri"
                android:layout_height="wrap_content"
                android:hint="Matomo url" />

            <EditText
                android:id="@+id/matomoId"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="Matomo id" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/matomoButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:text="Set matomo tracker" />

            <TextView
                style="@style/TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryAlpha"
                android:text="Change locale"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/locale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locale" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/localeButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:text="Set locale" />

            <TextView
                style="@style/TextPrimary"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:background="@color/primaryAlpha"
                android:text="Icon tester"
                android:textColor="@color/colorAccent" />


            <EditText
                android:id="@+id/iconInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Icon name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iconImageNegative"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_female_and_male_negative" />

                <ImageView
                    android:id="@+id/iconImageOutline"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_female_and_male_outline" />

                <ImageView
                    android:id="@+id/iconImagePossitive"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    tools:src="@drawable/ic_female_and_male_positive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimaryLight">

                <ImageView
                    android:id="@+id/iconImageNegative_tint"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:tint="@color/red_060"
                    tools:src="@drawable/ic_female_and_male_negative" />

                <ImageView
                    android:id="@+id/iconImageOutline_tint"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:tint="@color/red_060"
                    tools:src="@drawable/ic_female_and_male_outline" />

                <ImageView
                    android:id="@+id/iconImagePossitive_tint"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:tint="@color/red_060"
                    tools:src="@drawable/ic_female_and_male_positive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/iconButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/automaticErrorCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic error search" />


        </LinearLayout>
    </ScrollView>
</layout>