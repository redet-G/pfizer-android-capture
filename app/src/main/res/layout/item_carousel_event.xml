<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginStart="4.3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/programStageImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/fromTeiImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:translationX="4dp"
                android:translationY="4dp"
                app:layout_constraintBottom_toBottomOf="@id/programStageImage"
                app:layout_constraintEnd_toEndOf="@id/programStageImage"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/teiAttribute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/text_black_DE3"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/clearButton"
                app:layout_constraintStart_toEndOf="@id/programStageImage"
                app:layout_constraintTop_toTopOf="@id/programStageImage"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/programStageName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/text_black_8A3"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/clearButton"
                app:layout_constraintStart_toEndOf="@id/programStageImage"
                app:layout_constraintTop_toBottomOf="@id/teiAttribute"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/eventInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/text_black_8A3"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/clearButton"
                app:layout_constraintStart_toEndOf="@id/programStageImage"
                app:layout_constraintTop_toBottomOf="@id/programStageName"
                tools:text="03/01/2019 at Ngelehun CHC" />

            <ImageView
                android:id="@+id/clearButton"
                style="@style/ActionIconNoPadding"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_forever"
                app:tint="@color/text_black_8A3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
