<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_900</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.App.Distribution" parent="">
        <item name="colorSecondary">@color/distribution_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Discard" parent="">
        <item name="colorSecondary">@color/discard_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Correction" parent="">
        <item name="colorSecondary">@color/correction_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.App.Distribution" parent="Theme.App">
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.Distribution.ExtendedFloatingActionButton
        </item>
<!--        <item name="floatingActionButtonStyle">-->
<!--            @style/Widget.App.Distribution.FloatingActionButton-->
<!--        </item>-->
        <item name="toolbarStyle">@style/Widget.App.Distribution.Toolbar</item>
    </style>

    <style name="Theme.App.Discard" parent="Theme.App">
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.Discard.ExtendedFloatingActionButton
        </item>
        <item name="toolbarStyle">@style/Widget.App.Discard.Toolbar</item>
    </style>

    <style name="Theme.App.Correction" parent="Theme.App">
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.Correction.ExtendedFloatingActionButton
        </item>
        <item name="toolbarStyle">@style/Widget.App.Correction.Toolbar</item>
    </style>

    <style name="Widget.App.Distribution.ExtendedFloatingActionButton"
        parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Distribution
        </item>
    </style>

    <style name="Widget.App.Discard.ExtendedFloatingActionButton"
        parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Discard
        </item>
    </style>
    <style name="Widget.App.Correction.ExtendedFloatingActionButton"
        parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Correction
        </item>
    </style>


    <style name="Widget.App.Distribution.FloatingActionButton"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Distribution
        </item>
    </style>

    <style name="Widget.App.Discard.FloatingActionButton"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Discard
        </item>
    </style>

    <style name="Widget.App.Correction.FloatingActionButton"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Correction
        </item>
    </style>

    <style name="Widget.App.Default.Toolbar"
        parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Default.Toolbar
        </item>
    </style>

    <style name="Widget.App.Distribution.Toolbar"
        parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.Distribution.Toolbar
